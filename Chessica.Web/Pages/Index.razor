@page "/{RngSeed:int?}"
@inject NavigationManager NavManager

<PageTitle>Chessica</PageTitle>

<Board RngSeed=@RngSeed />

@code {
    [Parameter]
    public int? RngSeed { get; set; }

    protected override void OnInitialized()
    {
        if (!RngSeed.HasValue)
        {
            RngSeed = new Random().Next();
            NavManager.NavigateTo($"/{RngSeed}");
        }
    }
}